<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<import resource="classpath:/da/standard-bank-context.xml"/>
	<import resource="classpath:spring/db/test-db-config.xml"/>

	<!--IT CONFIG -->
	<context:property-placeholder ignore-unresolvable="true"/>
	<bean id="itConfig" class="com.swissquote.foundation.itconfig.core.ITConfig">
		<constructor-arg value="sqc-handlers-person-impl"/>
	</bean>

	<bean class="com.swissquote.foundation.itconfig.spring.context.ITConfigPostProcessor">
		<constructor-arg ref="itConfig"/>
	</bean>
	
	<bean id="sqc.clientSoaRequestDao" class="com.swissquote.lib.idempotence.dao.impl.ClientSoaRequestDaoImpl">
		<property name="sessionFactory" ref="trade-backoffice-session-factory"/>
	</bean>	
	
	<bean id="sqc.idempotentOperationManager"
		  class="com.swissquote.foundation.soa.idempotence.impl.IdempotentOperationManagerImpl">
		<constructor-arg ref="sqc.clientSoaRequestDao"/>
	</bean>
	<bean id="idempotentOperationService"
		  class="com.swissquote.foundation.soa.idempotence.impl.IdempotentOperationServiceImpl">
		<constructor-arg ref="sqc.idempotentOperationManager"/>
	</bean>
</beans>
