<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xmlns="http://jboss.org/schema/arquillian"
			xsi:schemaLocation="http://jboss.org/schema/arquillian
                                http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<engine>
		<property name="deploymentExportPath">target/deployments</property>
	</engine>

	// Container configuration: https://docs.jboss.org/author/display/ARQ/Tomcat+7.0+-+Embedded
	<container qualifier="tomcat7" default="true">
		<configuration>
			<property name="tomcatHome">target/tomcat7</property>
			<property name="workDir">target/arquillian-work</property>
			<property name="unpackArchive">true</property>
			<property name="bindHttpPort">${available.port}</property>
		</configuration>
	</container>
</arquillian>
